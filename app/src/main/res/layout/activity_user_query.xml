<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserQueryActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        android:background="@color/grey0"
        android:id="@+id/topbar">

        <TextView
            android:id="@+id/Query"
            android:fontFamily="@font/sf_pro_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue1"
            android:text="Grievances"
            android:textStyle="bold"
            android:textSize="30dp">

        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/grievences"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/poppins_light"
            android:background="@drawable/edittext_bg"
            android:gravity="start"
            android:hint="Write your grievances here (max 500 words)"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:maxLines="40"
            android:textColorHint="@color/grey1"
            android:textColor="@color/black"
            android:minLines="0"
            android:padding="4dp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="3dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/sf_pro_display"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:text="Submit" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment:"
        android:textColor="@color/blue1"
        android:fontFamily="@font/poppins_thin"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/content">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grey2"
        android:fontFamily="@font/poppins_light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="We will review your grievances and take neccessary actions based on your grievances.">

    </TextView>


</RelativeLayout>