<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="70dp"
    android:background="@color/grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/topbar"
            tools:context=".UserProfilePage"
            android:paddingTop="10dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/blue1"
                android:text="Profile"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/sf_pro_display">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topbar"
            android:orientation="vertical"
            android:background="@drawable/rounded_bg"
            android:id="@+id/middler"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/profileac"
                android:src="@drawable/profileaccount"
                android:layout_centerHorizontal="true">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileac"
                android:id="@+id/middle">
                <!-- User Name -->

                <TextView
                    android:id="@+id/username"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/blue1"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_toRightOf="@id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"/>



                <TextView
                    android:id="@+id/useremail"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14sp"
                    android:textColor="@color/blue1"/>
                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/useremail"
                    android:fontFamily="@font/poppins_light"
                    android:text="email"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"/>

                <!-- User Phone Number -->

                <TextView
                    android:id="@+id/userphone"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14sp"
                    android:textColor="@color/blue1"/>
                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/userphone"
                    android:text="phone"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/addres"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="14sp"
                    android:textColor="@color/blue1"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/userphone"
                    android:text="address"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/services"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Services:"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/blue1"
                    />
                <TextView
                    android:id="@+id/user_service"
                    android:layout_toRightOf="@id/services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="services"
                    android:textSize="17sp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/ratings"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Rating:"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/blue1"
                    />
                <TextView
                    android:id="@+id/user_rating"
                    android:layout_toRightOf="@id/services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ratings"
                    android:textSize="17sp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/middle"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/logout_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/background_button"
                    android:text="Logout"
                    android:padding="9dp"
                    android:fontFamily="@font/sf_pro_display"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

            </RelativeLayout>


        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/middler"
            android:layout_marginTop="1dp"
            android:text="Version 1.1.7"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_light"
            >

        </TextView>

    </RelativeLayout>
    </ScrollView>
</FrameLayout>